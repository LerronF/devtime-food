<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.food.devtime.devtimefood">

    <uses-sdk tools:overrideLibrary="com.github.clans.fab" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="com.food.devtime.devtimefood.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClientesActivity"
            android:label="@string/title_activity_Cliente"
            android:theme="@style/AppTheme.NoActionBar" />
        />
        <activity
            android:name=".ProdutosActivity"
            android:label="@string/title_activity_Produto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConfiguracoesActivity"
            android:label="@string/title_activity_configuracao"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PedidosEdit"
            android:label="@string/title_activity_pedidos_edit"
            android:parentActivityName=".MenuActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.food.devtime.devtimefood.MenuActivity" />
        </activity>
        <activity
            android:name=".EditarProdutoActivity"
            android:label="@string/title_activity_editar_produto"
            android:parentActivityName=".PedidosEdit"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.food.devtime.devtimefood.PedidosEdit" />
        </activity>
        <activity
            android:name=".MesaActivity"
            android:label="@string/title_activity_mesa"
            android:parentActivityName=".PedidosEdit"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.food.devtime.devtimefood.PedidosEdit" />
        </activity>
        <activity android:name=".ProdutoPersonalizadoActivity" />

        <activity
            android:name=".MonitorPreparo"
            android:label="@string/title_activity_monitor"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.food.devtime.devtimefood.MenuActivity" />
        </activity>
    </application>

</manifest>